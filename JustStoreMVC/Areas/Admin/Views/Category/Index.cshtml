@model List<Category>
<partial name="_Notifications" />
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Category List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3 ">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="CreateNewCategory" class="btn btn-primary">
					<i class="bi bi-file-earmark-plus"></i> Create New Category
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th style="color: gray; text-align:center">Category Name</th>
					<th style="color: gray; text-align:center">Display Order</th>
					<th style="color: gray; text-align:center">Changes</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td style="color: white;" align="center" valign="middle">@obj.Name</td>
						<td style="color: white;" align="center" valign="middle">@obj.DisplayOrder</td>
						<td align="center" valign="middle">
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.ID" class="btn btn-primary mx-2" style="width:40px">
									<i class="bi bi-pen"></i> Edit
								</a>
								<a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.ID" class="btn btn-danger mx-2" style="width:40px">
									<i class="bi bi-trash3"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
