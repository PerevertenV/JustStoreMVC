@using JustStore.Utlity
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Just Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/JustStoreMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href = "//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand nav-item btn bg-dark" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/book.png" style="width:40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <div>
                            <li class="nav-item btn bg-dark">
                                <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </div>
                        <div class="px-2">
                            <li class="nav-item btn bg-dark">
                                <a class="nav-link text-white" asp-area="Admin" asp-controller="Order" asp-action="Index">Manage Order</a>
                            </li>
                         </div>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <div>
                                <li class="nav-item dropdown btn bg-dark">
                                    <a class="nav-link dropdown-toggle text-white " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Content Manegment
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="dropdown-item">
                                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                        </li>
                                        <li class="dropdown-item">
                                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                                        </li>
                                        <li class="dropdown-item">
                                            <a class="nav-link text-white" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                                        </li> 

                                        <li><hr class="dropdown-divider"></li>

                                        <li class="dropdown-item">
                                            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                                        </li> 
                                    </ul>
                                </li>
                            </div>
                        }
                        
                        <div class="px-2">
                            <li class="nav-item btn bg-dark">
                                <a class="nav-link text-white" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                    @await Component.InvokeAsync("ShoppingCart")
                                </a>
                            </li>
                        </div>
                                               
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="font-family: 'Vivaldi', monospace; font-size: 20px; line-height: 1.6; letter-spacing: 3px; text-align: justify; color: white;" onmouseover="this.style.textDecoration='underline'" onmouseout="this.style.textDecoration='none'">Made by Pereverten</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/y6om4ux82785fymn1ce93psv4z2vk17x7nwsdve5rf8kdyc8/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>